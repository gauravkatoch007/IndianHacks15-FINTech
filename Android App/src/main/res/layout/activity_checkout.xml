    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount to Pay"
        android:id="@+id/amount_to_pay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAllCaps="true"
         />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cash Payment"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:background="#ff704d"
        android:id="@+id/cod_button"
        android:layout_below="@+id/amount_to_pay"

         />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Internet Banking : "
        android:id="@+id/online_button"
        android:layout_below="@id/cod_button"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAllCaps="true"
        />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/online_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




